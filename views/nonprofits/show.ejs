<%- include('../partials/header') %>
<br>
<a href='/bdmembers/nonprofits/<%= nonprofit.id %>/bdmembers/new'>ADD BOARD MEMBERS</a>
<a href='/reviews/nonprofits/<%= nonprofit.id %>/reviews/new'>ADD REVIEWS</a>

<form action = "/nonprofits/<%=nonprofit._id%>" method = "POST">
<section id="nonprofit-page">
    <div><%= nonprofit.name %>
        <br><%= nonprofit.contact %>, <%= nonprofit.title %>
        <br><%= nonprofit.email %>
        <br><%= nonprofit.address %>
        <br><%= nonprofit.city %>, <%= nonprofit.location %> <%= nonprofit.zip %>
        <br><%= nonprofit.phone %>
        <br>Website: <%= nonprofit.website %>
        <br>Category: <%= nonprofit.category %>
        <br>Guidestar: <%= nonprofit.guidestar %>
        <br><br>Mission Statement: <%= nonprofit.missionStatement %>
        <br><br>About Us: <%= nonprofit.aboutUs %>
    </div>
</section>
</form>

<label>BOARD MEMBERS</label>
<br>
<br>
<% if (bdmembers.length) { %>
    <table>
      <thead>
        <tr>
            <th>Name</th>
          <th>Title</th>
          <th>Company</th>
        </tr>
      </thead>
      <tbody>
        <% bdmembers.forEach(function(m) { %>
          <tr>
            <td><%= m.name %></td>
            <td><%= m.title %></td>
            <td><%= m.company %></td>
            <td><form action="/bdmembers/<%= m.id %>?_method=DELETE" method="POST">
            <button type = "submit">Delete</button>
            </form></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Board Members</h5>
  <% } %>

<label>REVIEWS</label>
<br>
<br>
<% if (reviews.length) { %>
  <table>
    <thead>
      <tr>
          <th>Name</th>
        <th>Review</th>
      </tr>
    </thead>
    <tbody>
      <% reviews.forEach(function(r) { %>
        <tr>
          <td><%= r.name %></td>
          <td><%= r.review %></td>
          <td><form action="/reviews/<%= r.id %>?_method=DELETE" method="POST">
          <button type = "submit">Delete</button>
          </form></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <h5>No Reviews</h5>
<% } %>