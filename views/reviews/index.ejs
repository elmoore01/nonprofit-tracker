<%- include('../partials/header') %>

<table id="list">
  <thead>
    <tr>
      <th>Name</th>
      <th>Review</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% reviews.forEach(function(r) { %>
      <tr>
        <td><%= r.name %></td>
        <td><%= r.review %></td>
        <td><form action="/nonprofits/<%= r.id %>?_method=DELETE" method="POST">
        <button type="submit">DELETE</button></form></td>
        <td>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>

<%- include('../partials/footer') %>